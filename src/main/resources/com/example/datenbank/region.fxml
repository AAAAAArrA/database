<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.datenbank.controller.RegionController">
   <children>
      <GridPane layoutX="65.0" layoutY="70.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Region" textFill="#201f1f">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </GridPane>
      <Button fx:id="btnNew" layoutX="65.0" layoutY="143.0" mnemonicParsing="false" onAction="#clickNew" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: lightblue;" text="NEW">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnSave" layoutX="168.0" layoutY="143.0" mnemonicParsing="false" onAction="#addRegion" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: lightblue;" text="SAVE" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnUpdate" layoutX="273.0" layoutY="143.0" mnemonicParsing="false" onAction="#updateRegion" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: lightblue;" text="UPDATE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnDelete" layoutX="375.0" layoutY="143.0" mnemonicParsing="false" onAction="#deleteRegion" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: lightblue;" text="DELETE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <TableView fx:id="tableView" layoutX="38.0" layoutY="207.0" onMouseClicked="#mouseClicked" prefHeight="178.0" prefWidth="541.0">
        <columns>
          <TableColumn fx:id="collId" prefWidth="171.20001220703125" text="Region_ID" />
          <TableColumn fx:id="regionName" prefWidth="374.4000244140625" text="Name" />
        </columns>
      </TableView>
      <TextField fx:id="name" layoutX="190.0" layoutY="73.0" />
   </children>
</AnchorPane>
